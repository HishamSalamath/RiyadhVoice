@{
}

@model Events
    
<div class="col-sm-4 col-lg-    4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailURL" alt="">
        <div class="caption">
            <h3>
                <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.Eventid">@Model.Name</a>
            </h3>

            <p class="para">@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="EventCart"
                   asp-action="AddToCart"
                   asp-route-EventID="@Model.Eventid">Avail this service</a>
            </p>
        </div>
    </div>
</div>
