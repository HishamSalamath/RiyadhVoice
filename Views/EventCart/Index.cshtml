@{
}

@model EventCartViewModel

<h2>Your Availed Events</h2>
<h4>We value your choice! Here are your availed services, we will get in touch with you soon!</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected amount</th>
            <th>Events</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.AvailedEvents.AvailedEventItems)
        {
            <tr>
                <td class="text-center">@line.Amount</td>
                <td class="text-left">@line.Events.Name</td>
                
            </tr>
        }
    </tbody>
    <tfoot>
        
    </tfoot>
</table>

